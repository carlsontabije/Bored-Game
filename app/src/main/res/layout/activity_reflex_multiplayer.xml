<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReflexGameActivity">

    <TextView
        android:id="@+id/kirbyLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Kirby Score : 300"
        android:textColor="#000000"
        android:textSize="18sp"
        app:fontFamily="@font/coming_soon"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/metaknightLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Meta Knight Score : 300"
        android:textColor="#000000"
        android:textSize="18sp"
        app:fontFamily="@font/coming_soon"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backg">

        <ImageView
            android:id="@+id/startLabel"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/taptostart"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/kirbyy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/kirbyy" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/metaknight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/metaknight" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/bang"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/bang" />

        <ImageView
            android:id="@+id/pink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pink" />

    </FrameLayout>

</LinearLayout>